<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_1"
    android:gravity="top"
    android:padding="10dp"
    tools:context=".ExpenseTrack">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:gravity="center"
                android:text="Expense Tracker"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/dateCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_group"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"

                android:descendantFocusability="beforeDescendants"
                android:elevation="10dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/violet"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:hint=" "
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/img_date"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="8dp"


                            app:srcCompat="@mipmap/ic_calender"
                            tools:ignore="contentDescription" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:hint=" "
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/img_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"


                            app:srcCompat="@drawable/clock"

                            tools:ignore="contentDescription" />

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_expense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"

                android:elevation="10dp"
                app:cardCornerRadius="5dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/violet"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <Spinner
                        android:id="@+id/spinner_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView"
                        android:layout_margin="15dp"
                        android:elevation="5dp" />

                    <Spinner
                        android:id="@+id/spinner_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView"
                        android:layout_margin="15dp"
                        android:layout_marginTop="30dp"
                        android:elevation="5dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_expense"
                android:layout_margin="25dp"
                android:elevation="10dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/violet"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <Spinner
                        android:id="@+id/spinner_groupHead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView"
                        android:layout_margin="15dp"
                        android:elevation="5dp" />

                    <Spinner
                        android:id="@+id/spinner_groupName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView"
                        android:layout_margin="15dp"
                        android:layout_marginTop="30dp"
                        android:elevation="5dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>